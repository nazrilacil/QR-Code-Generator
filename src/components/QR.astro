<main data-aos="fade-down" id="start"
  class="max-w-2xl mx-auto bg-white/50 rounded-xl shadow-lg p-6 space-y-6 animate-fadeIn backdrop-blur-md">

  <!-- Judul -->
  <h1 class="text-3xl font-bold text-center flex items-center justify-center gap-2">
    <i data-lucide="qr-code" class="w-7 h-7 animate-pulse"></i> QR Code Generator
  </h1>

  <!-- Form Input -->
  <section class="space-y-4">
    <p class="text-sm text-gray-600">Masukkan teks atau tautan, sesuaikan warna QR, lalu klik Generate.</p>

    <!-- Text -->
    <input id="text" type="text" placeholder="Masukkan link atau teks"
      class="w-full px-4 py-2 border rounded-md shadow-sm" />

    <!-- Warna -->
    <div class="flex items-center gap-4">
      <label class="text-sm">Warna QR:</label>
      <input type="color" id="qrColor" value="#000000"
        class="w-10 h-10 rounded-full border border-gray-300 p-0 appearance-none bg-transparent" />
    </div>

    <!-- Tombol Aksi -->
    <div class="flex flex-wrap gap-2">
      <button onclick="generateQRCode()"
        class="px-4 py-2 bg-blue-600 hover:bg-blue-700 text-white rounded-md flex items-center gap-2">
        <i data-lucide="wand-sparkles" class="w-4 h-4"></i> Generate
      </button>
      <button onclick="downloadQR()"
        class="px-4 py-2 bg-green-600 hover:bg-green-700 text-white rounded-md flex items-center gap-2">
        <i data-lucide="download" class="w-4 h-4"></i> Download
      </button>
      <button onclick="shareQR()"
        class="px-4 py-2 bg-gray-700 hover:bg-gray-800 text-white rounded-md flex items-center gap-2">
        <i data-lucide="send" class="w-4 h-4"></i> WhatsApp
      </button>
    </div>

    <!-- Loading Spinner -->
    <div id="loading" class="text-center hidden">
      <i data-lucide="loader-2" class="animate-spin w-6 h-6 text-blue-600 mx-auto"></i>
      <p class="text-sm text-gray-500">Membuat QR Code...</p>
    </div>

    <!-- Output QR -->
    <div id="qr-wrapper" class="text-center">
      <div
        class="inline-block relative p-4 bg-white border border-gray-200 shadow rounded-lg w-[200px] h-[200px] sm:w-[250px] sm:h-[250px]">
        <canvas id="qr-canvas" width="200" height="200" class="absolute inset-0"></canvas>
        <!-- Logo tertanam via script (tidak pakai <img> di sini) -->
      </div>
    </div>
  </section>

  <!-- Batch Generator -->
  <section class="space-y-2">
    <h2 class="text-xl font-semibold flex items-center gap-2">
      <i data-lucide="layers" class="w-5 h-5"></i> Batch Generator
    </h2>

    <textarea id="batchInput" rows="4" class="w-full p-2 border rounded-md shadow-sm"
      placeholder="Satu teks per baris..."></textarea>

    <button onclick="generateBatch()"
      class="bg-purple-600 hover:bg-purple-700 text-white px-4 py-2 rounded-md flex items-center gap-2">
      <i data-lucide="plus-square" class="w-4 h-4"></i> Generate Banyak QR
    </button>

    <div id="batchResult" class="grid grid-cols-1 sm:grid-cols-2 gap-4 mt-4"></div>
  </section>
</main>
<style>
  input[type="color"] {
    border-radius: 9999px;
    padding: 0;
    width: 40px;
    height: 40px;
    -webkit-appearance: none;
    appearance: none;
    background: none;
    border: 1px solid #ccc;
  }

  input[type="color"]::-webkit-color-swatch-wrapper {
    padding: 0;
    border-radius: 9999px;
  }

  input[type="color"]::-webkit-color-swatch {
    border: none;
    border-radius: 9999px;
  }
</style>
